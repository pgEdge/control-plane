meta {
  name: Remove backup config
  type: http
  seq: 6
}

post {
  url: {{host_1_url}}/v1/databases/:database_id
  body: json
  auth: none
}

params:path {
  database_id: storefront
}

body:json {
  {
    "spec": {
      "database_name": "storefront",
      "database_users": [
        {
          "username": "admin",
          "db_owner": true,
          "attributes": ["SUPERUSER", "LOGIN"]
        }
      ],
      "orchestrator_opts": {
        "swarm": {
          "extra_volumes": [
            {
              "host_path": "{{backups_dir}}",
              "destination_path": "/backups"
            }
          ]
        }
      },
      "nodes": [
        { "name": "n1", "host_ids": ["host-1"] },
        { "name": "n2", "host_ids": ["host-2"] }
      ]
    }
  }
}

vars:pre-request {
  wait_for_task: true
}
