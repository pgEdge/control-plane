meta {
  name: Create database
  type: http
  seq: 1
}

post {
  url: {{host_1_url}}/v1/databases
  body: json
  auth: none
}

body:json {
  {
    "id": "storefront",
    "spec": {
      "database_name": "storefront",
      "database_users": [
        {
          "username": "admin",
          "password": "password",
          "db_owner": true,
          "attributes": ["SUPERUSER", "LOGIN"]
        }
      ],
      "orchestrator_opts": {
        "swarm": {
          "extra_volumes": [
            {
              "host_path": "{{backups_dir}}",
              "destination_path": "/backups"
            }
          ]
        }
      },
      "backup_config": {
        "repositories": [
          {
            "id": "{{repository_id}}",
            "type": "posix",
            "base_path": "/backups"
          }
        ]
      },
      "nodes": [
        { "name": "n1", "host_ids": ["host-1"] },
        { "name": "n2", "host_ids": ["host-2"] }
      ]
    }
  }
}

vars:pre-request {
  wait_for_task: true
}
